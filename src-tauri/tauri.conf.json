{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Pomodoro Desk",
  "version": "0.1.0",
  "identifier": "com.firework.pomodoro-desk",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pomodoro Desk",
        "width": 1200,
        "height": 820,
        "minWidth": 980,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ]
  }
}
